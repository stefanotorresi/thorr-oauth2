<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Thorr\OAuth2\Entity\AccessToken"
            table="thorr_oauth_access_tokens"
            repository-class="Thorr\OAuth2\Doctrine\Repository\AccessTokenRepository"
            >

        <many-to-many field="scopes" target-entity="Thorr\OAuth2\Entity\Scope">
            <join-table name="thorr_oauth_access_tokens_scopes">
                <join-columns>
                    <join-column name="token" referenced-column-name="token" on-delete="CASCADE" />
                </join-columns>
                <inverse-join-columns>
                    <join-column name="scopeId" referenced-column-name="id" on-delete="CASCADE" />
                </inverse-join-columns>
            </join-table>
        </many-to-many>

    </entity>

</doctrine-mapping>
